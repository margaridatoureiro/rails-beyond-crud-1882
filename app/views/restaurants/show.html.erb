<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<h2>Reviews:</h2>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <%= link_to "Delete this review", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>
  <%#= link_to "Check out their chef", chef_restaurant_path(@restaurant) %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
